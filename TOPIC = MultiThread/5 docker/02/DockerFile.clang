# Используем базовый образ Ubuntu
FROM ubuntu:20.04

# Устанавливаем необходимые пакеты и компиляторы
RUN apt-get update && \
    apt-get install -y \
    clang \
    cmake \
    make

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем проект в контейнер
COPY . .

# Компилируем проект
RUN cmake . && make

# Указываем команду по умолчанию (можно изменить в зависимости от твоего проекта)
CMD ["./main.cpp"]
